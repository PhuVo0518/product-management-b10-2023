extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Add a new product 

    form(
        action=`/${prefixAdmin}/products/create`
        id="form-create-product"
        method="POST"
    )
        div(class="form-group")
            label(for="title") Title 
            input(
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
            )

        div(class="form-group")
            label(for="desc") Description 
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows="5"
            )
        
        div(class="form-group")
            label(for="price") Price 
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                value="0"
                min="0"
            )

        div(class="form-group")
            label(for="discount") Discount Percentage 
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value="0"
                min="0"
            )

        div(class="form-group")
            label(for="stock") Quantity 
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value="0"
                min="0"
            )

        div(class="form-group")
            label(for="thumbnail") Image 
            input(
                type="text"
                class="form-control"
                id="thumbnail"
                name="thumbnail"
            )

        div(class="form-group")
            label(for="position") Position 
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Increase automatically"
                min="1"
            )

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-label") Active
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
                checked
            )
            label(for="statusInactive" class="form-check-label") Inactive

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Create New
        
    script(src="/admin/products/product.js") 